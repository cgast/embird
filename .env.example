# Database settings
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/newsdb
SQLITE_PATH=/app/data/urls.db

# API Keys
COHERE_API_KEY=your_cohere_api_key_here

# Crawler settings
CRAWLER_INTERVAL=3600  # 1 hour in seconds
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=30

# User agent for crawler
USER_AGENT=EmBird/1.0

# Data retention settings
NEWS_RETENTION_DAYS=30  # Keep news items for 30 days
NEWS_MAX_ITEMS=10000   # Maximum number of news items to keep

# Debug mode (True/False)
DEBUG=False


EMBED_TITLE_ONLY=False
ENABLE_URL_MANAGEMENT=True


# Visualization Settings
# hours
VISUALIZATION_TIME_RANGE=48
# similarity threshold
VISUALIZATION_SIMILARITY=0.55

# Hierarchical Clustering Settings
# Enable recursive subclustering (True/False)
SUBCLUSTER_ENABLED=True
# Minimum cluster size before subclustering kicks in
SUBCLUSTER_MIN_SIZE=5
# Starting similarity threshold for subclusters (increases automatically)
SUBCLUSTER_SIMILARITY=0.70
# Maximum articles per leaf subcluster (clusters larger than this get recursively split)
SUBCLUSTER_MAX_SIZE=10

# FAISS Settings
# seconds
FAISS_UPDATE_INTERVAL=3600
# Maximum vectors to keep in memory
FAISS_MAX_VECTORS=10000
    